package Lab3;
import java.util.*;

public class Date implements Comparable<Date>{
	private String line, numDate;
	
	public Date(String line){
		this.line = line;
		this.numDate = convertToNumDate(line);
	}
	@Override
	public int compareTo (Date other){
		return 0;
	}
	
	public String convertToNumDate(String line){
		System.out.println("This is converting " + line + " to a num date.");
		StringTokenizer st = new StringTokenizer(line);
		String month = "";
		int day = 0;
		int year = 0;
		int numDays = 0;
		int tokenCount = 0;
		String token = "";
		String numDate = "";
		while (st.hasMoreTokens()){
			token = st.nextToken();
			if (month.equals("") && tokenCount == 0)
			System.out.println(token.toLowerCase() + ".");
			switch (token.toLowerCase()){
			case "january":
				month = "01";
				break;
			case "jan":
				month = "01";
				break;
			case "jan.":
				month = "01";
				break;
			case "february":
				month = "02";
				break;
			case "feb":
				month = "02";
				break;
			case "feb.":
				month = "02";
				break;
			case "march":
				month = "03";
				break;
			case "mar":
				month = "03";
				break;
			case "mar.":
				month = "03";
				break;
			case "april":
				month = "04";
				break;
			case "apr":
				month = "04";
				break;
			case "apr.":
				month = "04";
				break;
			case "may":
				month = "05";
				break;
			case "may.":
				month = "05";
				break;
			case "june":
				month = "06";
				break;
			case "jun":
				month = "06";
				break;
			case "jun.":
				month = "06";
				break;
			case "july":
				month = "07";
				break;
			case "jul":
				month = "07";
				break;
			case "jul.":
				month = "07";
				break;
			case "august":
				month = "08";
				break;
			case "aug":
				month = "08";
				break;
			case "aug.":
				month = "08";
				break;
			case "september":
				month = "09";
				break;
			case "sept":
				month = "09";
				break;
			case "sept.":
				month = "09";
				break;
			case "sep":
				month = "09";
				break;
			case "sep.":
				month = "09";
				break;
			case "october":
				month = "10";
				break;
			case "oct":
				month = "10";
				break;
			case "oct.":
				month = "10";
				break;
			case "november":
				month = "11";
				break;
			case "nov":
				month = "11";
				break;
			case "nov.":
				month = "11";
				break;
			case "december":
				month = "12";
				break;
			case "dec":
				month = "12";
				break;
			case "dec.":
				month = "12";
				break;
			default:
				System.out.println("I can't find the month");
				month = "-1";
				break;
			}
		
		if (day == 0 && tokenCount == 1){
			switch (month) {
            case "01":
            case "03":
            case "05":
            case "07":
            case "08":
            case "10":
            case "12":
                numDays = 31;
                break;
            case "04":
            case "06":
            case "09":
            case "11":
                numDays = 30;
                break;
            case "02":
            	//will address leap year once year token is received.
                numDays = 29;
                break;
            default:
            	System.out.println("Number of days can't be determined.");
                numDays = -1;
                break;
			}
			StringBuilder sb = new StringBuilder(token);
			sb.deleteCharAt(sb.indexOf(","));
			token = sb.toString();
			System.out.println(token + "This is stringbuilder");
			int tempDays = Integer.parseInt(token);
			if (tempDays > numDays)
				day = -1;
			if (day == -1)
				return "-1";
			if ()
			
		}
		if(year == 0 && tokenCount == 2){
			year = Integer.parseInt(token);
			if (month.equals("02")){
				if (((year % 4 == 0) && 
	                     !(year % 100 == 0))
	                     || (year % 400 == 0))
	                    numDays = 29;
	                else
	                    numDays = 28;
				if (day > numDays)
					return "-1";
			}
			if (year > 2199 || year < 1900)
				return "-1";
		}
		tokenCount++;
		}
		
		numDate = (token + "-" + month + "-" + day);
		System.out.print("numDate: " + numDate);
		return numDate;
	}
	@Override
	public String toString() {
		return "Date: " + line;
	}
	public String getLine() {
		return line;
	}
	public void setLine(String line) {
		this.line = line;
	}
	public String getNumDate() {
		return numDate;
	}
	public void setNumDate(String numDate) {
		this.numDate = numDate;
	}
	

}
